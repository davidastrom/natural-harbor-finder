{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "types/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "typeRoots": ["types/**/*"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
