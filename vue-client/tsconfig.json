{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "types/**/*"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "types/*": ["./types/*"]
    },
    "allowJs": true,
    "typeRoots": ["types/**/*"],
    "esModuleInterop": true
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
